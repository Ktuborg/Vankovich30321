@page
@model Vankovich30321.UI.Areas.Admin.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Picture</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Picture.Id" />
            <input type="hidden" asp-for="Picture.Image" /> <!-- Скрытое поле для текущего URL изображения -->
            <div class="form-group">
                <label asp-for="Picture.Name" class="control-label"></label>
                <input asp-for="Picture.Name" class="form-control" />
                <span asp-validation-for="Picture.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Picture.Description" class="control-label"></label>
                <input asp-for="Picture.Description" class="form-control" />
                <span asp-validation-for="Picture.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Picture.Image" class="control-label"></label>
                <img src="@Model.Picture.Image" />
                @*  <input asp-for="Picture.Image" class="form-control" />
                <span asp-validation-for="Picture.Image" class="text-danger"></span> *@
            </div>
            <div class="form-group">
                <label asp-for="Picture.Avtor" class="control-label"></label>
                <input asp-for="Picture.Avtor" class="form-control" />
                <span asp-validation-for="Picture.Avtor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Picture.CreationDate" class="control-label"></label>
                <input asp-for="Picture.CreationDate" class="form-control" />
                <span asp-validation-for="Picture.CreationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Picture.Price" class="control-label"></label>
                <input asp-for="Picture.Price" class="form-control" />
                <span asp-validation-for="Picture.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Picture.Category" class="control-label"></label>
                <select asp-for="Picture.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="mb-3">
                <label asp-for="Image" class="form-label">Изображение</label>
                <input asp-for="Image" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

